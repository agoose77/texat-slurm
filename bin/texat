#!/usr/bin/env bash
set -e

export SINGULARITY_CLEANENV=1

BB_WORKDIR=$(mktemp -d /scratch/${USER}_${SLURM_JOBID}.XXXXXX)
RDS_PATH="/rds/projects/2018/pricet-npl/adh471"
SINGULARITY_BIND="$SINGULARITY_BIND,${RDS_PATH}/shared:/mnt/shared"
SINGULARITY_BIND="$SINGULARITY_BIND,${RDS_PATH}/backend:/mnt/backend"
SINGULARITY_BIND="$SINGULARITY_BIND,${RDS_PATH}/share/texat-sim-data:/opt/geant4-data"
SINGULARITY_BIND="$SINGULARITY_BIND,${BB_WORKDIR}:/tmp"
export SINGULARITY_BIND

exec texat-runtime.sif "$@"
